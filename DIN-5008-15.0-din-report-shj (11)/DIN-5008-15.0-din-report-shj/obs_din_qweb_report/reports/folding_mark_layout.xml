<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="default_folding_marks">
        <t t-set="company" t-value="request.env['res.company'].search([('id', '=', request.env.company.id)])"/>
        <t t-if="company.display_folding_marks">
            <t t-set="header_spacing" t-value="company.paperformat_id.header_spacing"/>
            <t t-set="margin_top" t-value="company.paperformat_id.margin_top"/>
            <t t-set="first_fold_mark_top"
               t-value="90 - margin_top - margin_top/13 + header_spacing + header_spacing/12 "/>
            <t t-set="second_fold_mark_top"
               t-value="149 - margin_top - margin_top/13 + header_spacing + header_spacing/12"/>
            <t t-set="third_fold_mark_top"
               t-value="196.75 - margin_top - margin_top/13 + header_spacing + header_spacing/12"/>
            <div class="first_fold_mark" t-att-style="'top:%dmm;' % first_fold_mark_top"/>
            <div class="second_fold_mark" t-att-style="'top:%dmm;' % second_fold_mark_top"/>
            <div class="third_fold_mark" t-att-style="'top:%dmm;' % third_fold_mark_top"/>
        </t>
    </template>
</odoo>