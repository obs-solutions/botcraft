<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Purchase Order -->
    <template id="inherit_report_purchase_order" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table/thead" position="before">
            <t t-set="company" t-value="o.company_id"></t>
        </xpath>
        <xpath expr="//table/thead/tr/th[@name='th_description']" position="before">
            <th t-if="company.print_position" name="th_pos" class="text-left">Pos.</th>
        </xpath>
        <xpath expr="//table/tbody/t" position="after">
            <t t-set="cnt" t-value="0"/>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td t-if="company.print_position" name="td_pos">
                <t t-set="cnt" t-value="cnt + company.position_increment"/>
                <span t-esc="cnt"/>
            </td>
        </xpath>
        <xpath expr="//table[1]" position="attributes">
            <attribute name="class">table table-sm o_main_table main_table</attribute>
        </xpath>
    </template>

    <!-- Inherit Request For Quotation -->
    <template id="inherit_report_purchase_quotation" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table/thead" position="before">
            <t t-set="company" t-value="o.company_id"></t>
        </xpath>
        <xpath expr="//table/thead/tr/th[@name='th_description']" position="before">
            <th t-if="company.print_position" name="th_pos" class="text-left">Pos.</th>
        </xpath>
        <xpath expr="//table/thead" position="after">
            <t t-set="cnt" t-value="0"/>
        </xpath>
        <xpath expr="//td[@id='product']" position="before">
            <td t-if="company.print_position" name="td_pos" style="vertical-align: text-top;">
                <t t-set="cnt" t-value="cnt + company.position_increment"/>
                <span t-esc="cnt"/>
            </td>
        </xpath>
    </template>
</odoo>
