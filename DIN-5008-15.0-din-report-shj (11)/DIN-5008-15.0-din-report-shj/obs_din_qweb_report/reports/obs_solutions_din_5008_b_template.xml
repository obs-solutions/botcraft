<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit Euro Din Paperformat -->
    <record id="l10n_de.paperformat_euro_din" model="report.paperformat">
        <field name="margin_left">0</field>
        <field name="margin_right">20</field>
    </record>

    <!-- OBS Solutions Din 5008 Template B -->
    <template id="obs_solutions_din_5008_b_template">
        <div t-attf-class="header din_page o_company_#{company.id}_layout" style="margin-left:60px;">
            <table class="company_header" t-att-style="'height: %dmm;' % (din_header_spacing or 27)">
                <tr>
                    <td>
                        <h3 class="mt0" t-field="company.report_header"/>
                    </td>
                    <t t-if="company.logo_configuration == 'left'">
                        <td>
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" t-att-style="'max-height: %dmm;' % (din_header_spacing or 27)" class="float-left"/>
                        </td>
                    </t>
                    <t t-elif="company.logo_configuration == 'right'">
                        <td>
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" t-att-style="'max-height: %dmm;' % (din_header_spacing or 27)" class="float-right"/>
                        </td>
                    </t>
                    <t t-elif="company.logo_configuration == 'center'">
                        <div class="text-center" style="height:0px;">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" t-att-style="'max-height: %dmm;' % (din_header_spacing or 27)"/>
                        </div>
                    </t>
                </tr>
            </table>
        </div>

        <div t-attf-class="din_page invoice_note article o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" style="margin-left:20px;">
            <t t-if="company.display_folding_marks">
                <div class="first_fold_mark"/>
                <div class="second_fold_mark"/>
                <div class="third_fold_mark"/>
            </t>
            <div style="padding-left:20px;">
                <div>
                    <span class="border-bottom pb-1" style="font-size:9px">
                        <t t-if="company.name">
                            <span t-field="company.name"/>
                        </t>
                        <t t-if="company.street">
                            <span>|</span>
                            <span t-field="company.street"/>
                        </t>
                        <t t-if="company.street2">
                            <span>|</span>
                            <span t-field="company.street2"/>
                        </t>
                        <t t-if="company.zip">
                            <span>|</span>
                            <span t-field="company.zip"/>
                        </t>
                        <t t-if="company.city">
                            <span t-if="not company.zip">|</span>
                            <span t-field="company.city"/>
                        </t>
                        <t t-if="company.country_id">
                            <span>|</span>
                            <span t-field="company.country_id.name"/>
                        </t>
                    </span>
                </div>
                <div class="d-flex mt-2 information_block_1_">
                    <div class="information_block_1" style="width:67%;">
                        <div t-if="address">
                            <t t-out="address"/>
                        </div>
                        <div t-else="fallback_address">
                            <t t-esc="fallback_address" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                        </div>
                    </div>
                    <div class="information_block_1" style="width:33%;">
                        <t t-if="'l10n_de_template_data' in company" t-set="template_data" t-value="company.l10n_de_template_data"/>
                        <t t-if="o and 'l10n_de_template_data' in o" t-set="template_data" t-value="o.l10n_de_template_data"/>
                        <t t-foreach="template_data" t-as="row">
                            <div class="information_block_">
                                <t t-esc="row[0]"/>
                                :
                                <t t-esc="row[1]"/>
                            </div>
                        </t>
                    </div>
                </div>
                <t t-set="delivery_address" t-value="request.env['res.config.settings'].delivery_address()"/>
                <div class="d-flex mt-4">
                    <t t-if="o and o._name == 'sale.order' and delivery_address and o and o.partner_shipping_id and o.partner_invoice_id">
                        <t t-if="o.partner_shipping_id != o.partner_invoice_id">
                            <div class="information_block_1" style="width:67%;">
                                <t t-if="o and o._fields.get('partner_shipping_id') and o.partner_shipping_id">
                                    <t t-foreach="o.partner_shipping_id" t-as="doc_shipping_address">
                                        <td class="shipping_invoice_address">
                                            <strong>
                                                Shipping Address:
                                            </strong>
                                            <div t-esc="doc_shipping_address" t-options="{'widget': 'contact', 'fields': ['address', 'name','phone'], 'no_marker': True}"/>
                                        </td>
                                    </t>
                                </t>
                            </div>
                            <div class="information_block_1" style="width:33%;">
                                <t t-if="o and o._fields.get('partner_invoice_id') and o.partner_invoice_id">
                                    <t t-foreach="o.partner_invoice_id" t-as="doc_invoice_address">
                                        <td class="invoice_address">
                                            <strong>Invoicing Address:</strong>
                                            <span t-esc="doc_invoice_address" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True}"/>
                                        </td>
                                    </t>
                                </t>
                            </div>
                        </t>
                        <t t-else="">
                            <div class="information_block_1" id="add_block">
                                <t t-if="o and 'l10n_de_addresses' in o">
                                    <t t-foreach="o.l10n_de_addresses" t-as="doc_address">
                                        <div>
                                            <strong>
                                                <t t-esc="doc_address[0]"/>
                                            </strong>
                                            <div t-esc="doc_address[1]" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                                        </div>
                                    </t>
                                </t>
                            </div>
                        </t>
                    </t>
                </div>
            </div>
            <!-- <h2>
                <span t-if="not o and not docs">
                    <t t-esc="company.l10n_de_document_title"/>
                </span>
                <span t-else="">
                    <t t-set="o" t-value="docs[0]" t-if="not o"/>
                    <span t-if="'l10n_de_document_title' in o">
                        <t t-esc="o.l10n_de_document_title"/>
                    </span>
                    <span t-else="" t-field="o.name"/>
                </span>
            </h2> -->
            <div>
                <t t-out="0"/>
            </div>
        </div>

        <div t-attf-class="din_page footer o_company_#{company.id}_layout">
            <div class="text-right page_number">
                <div class="text-muted">
                    Page:
                    <span class="page"/>
                    of
                    <span class="topage"/>
                </div>
            </div>
            <div class="company_details">
                <table>
                    <t t-if="company.report_footer != '&lt;p&gt;&lt;br&gt;&lt;/p&gt;'">
                        <tr>
                            <td>
                                <ul class="list-inline">
                                    <li>
                                        <span t-field="company.report_footer"/>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </t>
                    <t t-else="">
                        <tr>
                            <td>
                                <ul class="list-inline">
                                    <li t-if="company.name">
                                        <span t-field="company.name"/>
                                    </li>
                                    <li t-if="company.street">
                                        <span t-field="company.street"/>
                                    </li>
                                    <li t-if="company.street2">
                                        <span t-field="company.street2"/>
                                    </li>
                                    <li>
                                        <span t-if="company.zip" t-field="company.zip"/>
                                        <span t-if="company.city" t-field="company.city"/>
                                    </li>
                                    <li t-if="company.country_id">
                                        <span t-field="company.country_id.name"/>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li t-if="company.phone">
                                        <span t-field="company.phone"/>
                                    </li>
                                    <li t-if="company.email">
                                        <span t-field="company.email"/>
                                    </li>
                                    <li t-if="company.website">
                                        <span t-field="company.website"/>
                                    </li>
                                </ul>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    <li t-if="company.vat">
                                        <t t-esc="company.account_fiscal_country_id.vat_label or 'Tax ID'"/>
                                        :
                                        <span t-field="company.vat"/>
                                    </li>
                                    <li>
                                        HRB Nr:
                                        <span t-field="company.company_registry"/>
                                    </li>
                                    <div t-field="company.report_footer"/>
                                </ul>
                            </td>
                            <td>
                                <ul class="list-inline" t-if="company.partner_id.bank_ids">
                                    <t t-foreach="company.partner_id.bank_ids[:2]" t-as="bank">
                                        <li>
                                            <span t-field="bank.bank_id.name"/>
                                        </li>
                                        <li>
                                            IBAN:
                                            <span t-field="bank.acc_number"/>
                                        </li>
                                        <li>
                                            BIC:
                                            <span t-field="bank.bank_id.bic"/>
                                        </li>
                                    </t>
                                </ul>
                            </td>
                        </tr>
                    </t>
                </table>
            </div>
        </div>
    </template>

    <record id="report_layout_din5008_b_custom" model="report.layout">
        <field name="view_id" ref="obs_din_qweb_report.obs_solutions_din_5008_b_template"/>
        <field name="image">/l10n_de/static/img/preview_din.png</field>
        <field name="pdf">/l10n_de/static/pdf/preview_din.pdf</field>
        <field name="name">DIN 5008 B</field>
    </record>
</odoo>
