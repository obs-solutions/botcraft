<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_sale_obs_sequence" inherit_id="sale.report_saleorder_document" priority="999">
        <xpath expr="//table/thead" position="before">
            <t t-set="company" t-value="doc.company_id"></t>
        </xpath>
        <xpath expr="//table/thead/tr/th[@name='th_description']" position="before">
            <th t-if="company.print_position" name="th_pos" class="text-left">Pos.</th>
        </xpath>
        <xpath expr="//table/tbody/t" position="after">
            <t t-set="cnt" t-value="0"/>
        </xpath>
        <xpath expr="//table/tbody/t[3]/tr/t/td[@name='td_name']" position="before">
            <td t-if="company.print_position" name="td_pos">
                <t t-set="cnt" t-value="cnt + company.position_increment"/>
                <span t-esc="cnt"/>
            </td>
        </xpath>
        <xpath expr="//table[1]" position="attributes">
            <attribute name="class">table table-sm o_main_table main_table</attribute>
        </xpath>
        <!-- <xpath expr="//div[hasclass('page')]" position="attributes">
            <attribute name="style">margin-left:50px;</attribute>
        </xpath> -->
    </template>
</odoo>
