<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Base Document Layout And Add Two New Fields  -->
    <record id="base_document_layout_form_view" model="ir.ui.view">
        <field name="name">base.document.layout.inherit</field>
        <field name="model">base.document.layout</field>
        <field name="inherit_id" ref="web.view_base_document_layout"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='layout_background']" position="after">
                <field name="display_folding_marks"/>
            </xpath>
            <xpath expr="//field[@name='logo']" position="after">
                <field name="logo_configuration" widget="radio"/>
            </xpath>
            <xpath expr="//field[@name='report_footer']" position="attributes">
                <attribute name="options">{'resizable': false, 'codeview': true}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
