<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_order_postion_number" model="ir.ui.view">
        <field name="name">sale.order.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
                <field name="position_number" optional="hide"/>
            </xpath>
        </field>
    </record>
    
</odoo>
