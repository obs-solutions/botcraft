<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-8 o_setting_box" id="position_increment" invisible="1">
                        <div class="o_setting_left_pane">
                            <field name="print_position"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="print_position"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                  aria-label="Values set here are company-specific." groups="base.group_multi_company"
                                  role="img"/>
                            <div class="text-muted">
                                Set position increment.
                            </div>
                            <div class="content-group" attrs="{'invisible': [('print_position','=',False)]}">
                                <div class="mt16">
                                    <span>
                                        Position Increment By
                                        <field name="position_increment"
                                               attrs="{'required': [('print_position', '=', True)]}"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
            <xpath expr="//field[@name='external_report_layout_id']" position="after">

                <!-- Position Line Number Boolean Field In Res Config Settings -->
                <div>
                    <div class="o_setting_box" style="margin-top:20px;">
                        <div class="o_setting_left_pane">
                            <field name="position_line_number"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="position_line_number"/>
                            <div class="text-muted">
                                Set position increment.
                            </div>
                            <div class="content-group" attrs="{'invisible': [('print_position','=',False)]}">
                                <div class="mt16">
                                    <span>
                                        Position Increment By
                                        <field name="position_increment"
                                               attrs="{'required': [('print_position', '=', True)]}"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>